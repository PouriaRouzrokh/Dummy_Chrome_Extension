{
  "manifest_version": 3,
  "name": "AI Model Selector",
  "version": "1.0",
  "description": "A Chrome extension to select and use different AI models",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}