{
  "manifest_version": 3,
  "name": "LLM API Manager",
  "version": "1.0",
  "description": "Manage your LLM API keys",
  "permissions": ["storage"],
  "action": {
    "default_popup": "api-manager.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}